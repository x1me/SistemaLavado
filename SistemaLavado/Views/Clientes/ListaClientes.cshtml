@model List<SistemaLavado.Models.ClientePersonalizado>
@{
    ViewBag.Title = "ListaClientes";
}

<div class="table-container">
    <h2>Lista De Clientes</h2>
    <br />
    <p>Esta lista abarca todos los clientes con sus datos personales</p>
    <br />
    @{
        if ((TempData["respuesta"] as object) != null)
        {
            var respuesta = TempData["respuesta"];
            @*if (respuesta.existe)
                                {
                        <div class="alert alert-success">@respuesta.mensaje</div>
                    }
                    else
                    {
                        <div class="alert alert-success">@respuesta.mensaje</div>

                }*@
        }
    }
    <div class="table">
        @{
            string tipo = Session["role"] as string;

            if (tipo == "a")
            {
                <div class="container-header">
                    <a href="/Clientes/agregar" class="btn btn-success">Nuevo Cliente</a>
                </div>
            }
        }

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Cedula</th>
                    <th>Nombre</th>
                    <th>Fecha Nacimiento</th>
                    <th>Género</th>
                    <th>Provincia</th>
                    <th>Cantón</th>
                    <th>Distrito</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var cl in Model)
                {
                    <tr>
                        <td>@cl.cedula</td>
                        <td>@cl.nombre &nbsp; @cl.apellido1 &nbsp; @cl.apellido2</td>
                        <td>@cl.fecha_nacimiento</td>
                        <td>@cl.genero</td>
                        <td>@cl.provincia</td>
                        <td>@cl.canton</td>
                        <td>@cl.distrito</td>

                        <td>
                            <a class="btn btn-link" href="/Clientes/agregar?id=@cl.id">Editar</a>
                            @{
                                if (tipo == "a")
                                {
                                    <a class="btn btn-link" href="/Clientes/eliminar?id=@cl.id">Eliminar</a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
