@model SistemaLavado.Models.MarcaVehiculo
@{
    ViewBag.Title = "EditarAgregar";
}
<form method="post" action="@Url.Action("agregar")">

    <input type="hidden" value="@Model.id_codigoMarcaV" name="fabricante" class="form-control" />
    <div class="form-group">
        <label>Código</label>
        <input type="text" value="@Model.codigo" name="codigo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <input type="text" value="@Model.tipo" name="tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label>País</label>
        <input type="text" value="@Model.fabricante" name="fabricante" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Agregar</button>
    </div>
</form>