@model SistemaLavado.Models.TipoVehiculo
@{
    ViewBag.Title = "ModeloVista";
}
<form id="frmTipoInserta" method="post" action="@Url.Action("agregaroeditar")">
    <input type="hidden" value="@Model.id_codigoTV" name="id_codigoTV" />
    <h1 class="font-weight-bolder">Inserta un nuevo tipo de vehículo</h1>
    <br />
    <p class="text-muted">Agrega el tipo de vehículo con su respectivo código</p>
    <br />
    <div class="form-group">
        <label>Código</label>
        <input type="text" value="@Model.codigo" name="codigo" id="codigo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <input type="text" value="@Model.tipo" name="tipo" id="tipo" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Guardar" id="btnAceptar" />
    </div>
    <a href="~/Principal/PaginaPrincipal" type="button" class="btn btn-primary">Regresar Página Principal</a>
</form>

@section scripts
    {
    <script src="~/Scripts/ValidacionesGenericas.js"></script>
    <script src="~/Scripts/ValidacionesInsertar/InsertaTipoVehiculo.js"></script>
}
