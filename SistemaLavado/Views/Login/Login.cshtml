@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@{
    if (ViewBag.mensaje != null && ViewBag.clase != null)
    {
        string error = ViewBag.mensaje;
        string clase = ViewBag.clase;
        if (error.Length > 0)
        {
            <div class="@clase">@error</div>
        }
    }

}
<form method="post" action='@Url.Action("Login", "Login")'>
    <div class="form-group">
        <label>Usuario:</label>
        <input type="text" name="correo" id="Usuario" class="form-control" />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" name="contrasena" id="Password" class="form-control" />

    </div>
    <br />
    <button type="submit" id="btnAceptar">Aceptar</button>
    <button type="reset" id="btnLimpiar">Cancelar</button>


</form>
